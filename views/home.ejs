<%- include("partials/header.ejs")%>

    <div class="container my-5">
        <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
            <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
                <h1 class="display-4 fw-bold lh-1 text-body-emphasis text-start ">Discover Movies & <br>Tv Shows with
                    ease üçø
                </h1>
                <p class="lead ">MovieLancer is your premier destination for all things cinema, meticulously crafted to
                    help you discover the films that resonate with your cinematic soul.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
                    <button type="button" class="btn btn-primary btn-lg px-4 me-md-2 fw-bold"><a href="#movies"
                            style="color: white;">Movies</a></button>
                    <button type="button" class="btn btn-outline-secondary btn-lg px-4"><a href="#TV"
                            style="color: gray;">Tv Shows</a></button>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
                <img class="rounded-lg-3 banner" src="images/movies.avif" alt="" width="720">
            </div>
        </div>
    </div>
    <div class="container py-5 d-md-flex justify-content-between">
        <h3 class="text-start">Popular Movies</h3>
        <a style="cursor: pointer;" class="text-end" href="/movies">See more</a>

    </div>

    <section id="movies">
        <div class="container">
            <div class="row">
                <% movies.forEach(movie=> { %>
                    <div class="col-6 col-md-4 col-lg-3 mb-4">
                        <div class="card" id="tooltip">
                            <img src="<%= 'https://image.tmdb.org/t/p/w500/' + movie.poster_path %>"
                                class="card-img-top" alt="<%= movie.title %>">
                            <div class="card-body d-md-flex justify-content-between rating">
                                <h6 class="card-title" style="text-align: center; font-weight: bold;">
                                    <%= movie.title %>
                                </h6>
                                <div class="score">
                                    <span>
                                        <%=movie.vote_average %>
                                    </span>
                                </div>
                            </div>
                            <span class="tooltiptext">
                                <h4>Overview</h4>
                                <span class="desc">
                                    <%= movie.overview %>
                                </span>
                            </span>

                        </div>
                    </div>
                    <% }); %>
            </div>


    </section>

    <div class="container py-5 d-md-flex justify-content-between">
        <h3 class="text-start">Popular TV Shows</h3>
        <a style="cursor: pointer;" class="text-end" href="/Series">See more</a>
    </div>

    <section id="TV">
        <div class="container">
            <div class="row">
                <% tvShows.forEach(tvShow=> { %>
                    <div class="col-6 col-md-4 col-lg-3 mb-4">
                        <div class="card" id="tooltip">
                            <img src="<%= 'https://image.tmdb.org/t/p/w500/' + tvShow.poster_path %>"
                                class="card-img-top" alt="<%= tvShow.title %>">
                            <div class="card-body d-md-flex justify-content-between rating">
                                <h6 class="card-title" style="text-align: center; font-weight: bold;">
                                    <%= tvShow.name %>
                                </h6>
                                <div class="score">
                                    <span>
                                        <%=tvShow.vote_average %>
                                    </span>
                                </div>
                            </div>
                            <span class="tooltiptext">
                                <h4>Overview</h4>
                                <span class="desc">
                                    <% if(tvShow !="" ){%>
                                        <%= tvShow.overview %>
                                            <% }else{%>
                                                <span>N/A</span>
                                                <% } %>
                                </span>
                            </span>

                        </div>
                    </div>
                    <% }); %>
            </div>


    </section>
    <%- include("partials/footer.ejs")%>